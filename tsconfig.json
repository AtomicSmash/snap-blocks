{
	"extends": "@atomicsmash/coding-standards/typescript/base",
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		".eslintrc.cjs"
	],
	"compilerOptions": {
		"sourceMap": true,
		"jsx": "react-jsx",
		"module": "es2022",
		"lib": ["DOM", "DOM.Iterable", "ES2021"],
		"target": "ES2021",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
