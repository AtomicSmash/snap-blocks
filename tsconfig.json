{
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		".eslintrc.cjs"
	],
	"compilerOptions": {
		"sourceMap": true,
		"lib": ["DOM", "DOM.Iterable", "ES2021"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "es2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2021",
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"skipLibCheck": true,

		// WP Scripts takes care of building everything.
		"noEmit": true
	}
}
